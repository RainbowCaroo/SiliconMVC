@model SignInViewModel
@{
	ViewData["Title"] = "Sign In";
}


<section class="signin">
	<div class="container">

		@if (!string.IsNullOrEmpty(ViewData["StatusMessage"]?.ToString()))
		{
			<div class="alert alert-danger">
				@ViewData["StatusMessage"]
			</div>
		}

		<form method="post" asp-action="SignIn" asp-controller="Auth" asp-route-ReturnUrl="@ViewData["ReturnUrl"]" novalidate>
			<h1>Welcome back</h1>
			<p>Dont't have an acount yet? <a asp-action="SignUp" asp-controller="Auth">Sign up here</a>.</p>

			<div class="form-content">
				<div id="form-email" class="input-group">
					<label asp-for="Email"></label>
					<input asp-for="Email" />
				</div>
				<div id="form-password" class="input-group">
					<label asp-for="Password"></label>
					<input asp-for="Password" />
				</div>
				<div id="form-checkbox" class="checkbox-group">
					<div class="input-group">
						<label asp-for="IsPresistent"></label>
						<input asp-for="IsPresistent" />
					</div>
				</div>
				<div id="form-button">
					<button type="submit" class="btn btn-theme"><i class="fa-solid fa-right-to-bracket"></i>Sign in</button>
				</div>
			</div>

		</form>


	</div>
</section>