@{
    var user = await UserManager.GetUserAsync(User);
}

<!DOCTYPE html>
<html lang="sv-se">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @if (!string.IsNullOrWhiteSpace(ViewData["Title"]?.ToString()))
    {
        <title>@ViewData["Title"] - Silicon</title>
    }
    else
    {
        <title>Silicon</title>
    }

    <script defer src="https://kit.fontawesome.com/e5ae214cf1.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
</head>
<body>

    <div class="wrapper">
        <header>
            <div class="container">
                <a id="logo" asp-controller="Home" asp-action="Index"><img src="~/image/silicon-logo-light-theme.svg" alt=""></a>

                <div id="menu">
                    <nav>
                        <a class="menu-link" asp asp-controller="Home" asp-action="Index" asp-fragment="showcase">Overview</a>
                        <a class="menu-link" asp asp-controller="Home" asp-action="Index" asp-fragment="features">Features</a>
                        @if(SignInManager.IsSignedIn(User))
                        {
                            <a class="menu-link" asp asp-controller="Courses" asp-action="Index">Courses</a>
                        }
                        <a class="menu-link" asp asp-controller="Contact" asp-action="Index">Contact</a>
                    </nav>
                </div>

                <div class="btn-switch">
                    <label>Light</label>
                    <label class="switch" for="switch-mode">
                        <input type="checkbox" id="switch-mode" />
                        <span class="slider round"></span>
                    </label>
                    <label>Dark</label>
                </div>

                <div class="account-buttons">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <div class="profile">
                            <div class="profile-image">
                                <a asp-action="Details" asp-controller="Account">
                                    <img src="~/image/uploads/profiles/@user!.ProfileImage" />
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <a class="btn-gray" asp-controller="Auth" asp-action="SignIn"><i class="fa-solid fa-arrow-right-to-bracket"></i><span>Sign In</span></a>
                        <a class="btn-theme" asp-controller="Auth" asp-action="SignUp"><i class="fa-regular fa-user"></i><span>Sign Up</span></a>
                    }
                </div>
            </div>
        </header>

        <main>
            @RenderBody()
        </main>

        <footer>
            <div class="container">
                <div class="social-media">
                    <a class="btn-social" href="#"><i class="fa-brands fa-facebook"></i></a>
                    <a class="btn-social" href="#"><i class="fa-brands fa-square-x-twitter"></i></a>
                    <a class="btn-social" href="#"><i class="fa-brands fa-instagram"></i></a>
                    <a class="btn-social" href="#"><i class="fa-brands fa-youtube"></i></a>
                </div>
                <p>&copy; @DateTime.Now.Year Silicon. All rights reserved. Pulvinar urna condimentum amet tempor, ornare integer. Lorem odio justo malesuada suspendisse viverra aliquet quisque turpis non. Feugiat in odio non nunc ornare consectetur.</p>
            </div>
        </footer>
        </footer>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
